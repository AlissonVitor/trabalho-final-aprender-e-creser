MyApp.dart
import 'package:flutter/material.dart';

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(
        backgroundColor: Colors.red,
        title: Text("Medicine App"),
      ),
      body: Container(
        padding: EdgeInsets.all(23.0),
        child: Column(
          crossAxisAlignment: CrossAxisAlignment.stretch,
          children: <Widget>[
            myCardWidget(meuIcone: Icons.local_movies, meuTexto: "Consulta"),
          ],
        ),
      ),
    );
  }
}

class myCardWidget extends StatelessWidget {
  myCardWidget({this.meuIcone, this.meuTexto});

  final IconData meuIcone;
  final String meuTexto;

  @override
  Widget build(BuildContext context) {
    return Container(
      child: Card(
        child: Column(
          mainAxisSize: MainAxisSize.min,
          children: <Widget>[
            ListTile(
              leading: Icon(meuIcone, size: 40.0, color: Colors.grey),
              title: Text(
                meuTexto,
                style: TextStyle(fontSize: 20.0),
              ),
              subtitle: const Text(
                  'Nome: Fulano, RG:40.002.892-2, SUS:4002, Idade:23, Sexo:M'),
            ),
            ButtonTheme.bar(
              child: ButtonBar(
                children: <Widget>[
                  FlatButton(
                    child: const Text('Aplicar'),
                    onPressed: () {},
                  ),
                  FlatButton(
                    child: const Text(''),
                    onPressed: () {},
                  ),
                ],
              ),
            )
          ],
        ),
      ),
    );
  }
}

